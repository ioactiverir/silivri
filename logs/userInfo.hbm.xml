<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "userInfo" table = "userInfo">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "userId" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "phoneNumber" column = "phoneNumber" type = "string"/>
        <property name = "userFirstName" column = "userFirstName" type = "string"/>
        <property name = "userLastName" column = "userLastName" type = "string"/>
        <property name = "bankNo" column = "bankNo" type = "string"/>
        <property name = "userMail" column = "userMail" type = "string"/>
        <property name = "userCreditValue" column = "userCreditValue" type = "int"/>
        <property name = "userGiftValue" column = "userGiftValue" type = "int"/>

    </class>
</hibernate-mapping>